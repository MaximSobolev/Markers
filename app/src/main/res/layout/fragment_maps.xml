<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsFragment">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/min_dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/zoomPlus"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="@dimen/seventy_dp"
            android:layout_height="@dimen/seventy_dp"
            android:layout_marginBottom="@dimen/second_dp"
            android:backgroundTint="@color/primary10"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconSize="@dimen/fifth_dp"
            android:alpha="0.6"/>

        <Button
            android:id="@+id/zoomMinus"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="@dimen/seventy_dp"
            android:layout_height="@dimen/seventy_dp"
            android:backgroundTint="@color/primary10"
            app:icon="@drawable/ic_baseline_remove_24"
            app:iconSize="@dimen/fifth_dp"
            android:alpha="0.6"/>


    </LinearLayout>

</FrameLayout>